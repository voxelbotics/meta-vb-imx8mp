software =
{
	version = "@@SWU_VERSION@@";
	hardware-compatibility: [ "@@SWU_HWCOMPAT@@" ];
	@@SWU_BOARD@@ = {
	  stable:
	  {
		copy1:
		{
			partitions: (
			{
				type = "diskformat";
				device = "@@SWU_STG_DEV@@p1";

				properties: {
					fstype = "vfat";
					force = "true";
				}
			},
			{
				type = "diskformat";
				device = "@@SWU_STG_DEV@@p3";

				properties: {
					fstype = "ext4";
					force = "true";
				}
			}
			);
			images: (
			{
				name = "bootloader";
				filename = "@@SWU_UBOOT_FILE@@";
				version = "@@SWU_UBOOT_VERSION@@";
				install-if-different = true;
				device = "@@SWU_STG_DEV@@";
				offset = "32K";
				sha256 = "$swupdate_get_sha256(@@SWU_UBOOT_FILE@@)";
			}
			);
			files: (
			{
				filename = "Image";
				device = "@@SWU_STG_DEV@@p1";
				path = "/Image";
				filesystem = "vfat";
				preserve-attributes = true;
				sha256 = "$swupdate_get_sha256(Image)";

			},
			{
				filename = "@@KERNEL_DEVICETREE_BASENAME@@.dtb";
				device = "@@SWU_STG_DEV@@p1";
				path = "/@@KERNEL_DEVICETREE_BASENAME@@.dtb";
				filesystem = "vfat";
				preserve-attributes = true;
				sha256 = "$swupdate_get_sha256(@@KERNEL_DEVICETREE_BASENAME@@.dtb)";

			},
			{
				filename = "@@SWU_ROOTFS_FILE@@";
				type = "archive";
				device = "@@SWU_STG_DEV@@p3";
				path = "/";
				filesystem = "ext4";
				installed-directly = true;
				preserve-attributes = true;
				sha256 = "$swupdate_get_sha256(@@SWU_ROOTFS_FILE@@)";

			}
			);
			bootenv: (
			{
				name = "mmcpart";
				value = "1";
			},
			);
		};
		copy2:
		{
			partitions: (
			{
				type = "diskformat";
				device = "@@SWU_STG_DEV@@p2";

				properties: {
					fstype = "vfat";
					force = "true";
				}
			},
			{
				type = "diskformat";
				device = "@@SWU_STG_DEV@@p4";

				properties: {
					fstype = "ext4";
					force = "true";
				}
			}
			);
			images: (
			{
				name = "bootloader";
				filename = "@@SWU_UBOOT_FILE@@";
				version = "@@SWU_UBOOT_VERSION@@";
				install-if-different = true;
				device = "@@SWU_STG_DEV@@";
				offset = "32K";
				sha256 = "$swupdate_get_sha256(@@SWU_UBOOT_FILE@@)";
			}
			);
			files: (
			{
				filename = "Image";
				device = "@@SWU_STG_DEV@@p2";
				path = "/Image";
				filesystem = "vfat";
				preserve-attributes = true;
				sha256 = "$swupdate_get_sha256(Image)";

			},
			{
				filename = "@@KERNEL_DEVICETREE_BASENAME@@.dtb";
				device = "@@SWU_STG_DEV@@p2";
				path = "/@@KERNEL_DEVICETREE_BASENAME@@.dtb";
				filesystem = "vfat";
				preserve-attributes = true;
				sha256 = "$swupdate_get_sha256(@@KERNEL_DEVICETREE_BASENAME@@.dtb)";

			},
			{
				filename = "@@SWU_ROOTFS_FILE@@";
				type = "archive";
				device = "@@SWU_STG_DEV@@p4";
				path = "/";
				filesystem = "ext4";
				installed-directly = true;
				preserve-attributes = true;
				sha256 = "$swupdate_get_sha256(@@SWU_ROOTFS_FILE@@)";
